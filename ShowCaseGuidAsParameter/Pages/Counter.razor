@page "/counter"
@page "/counter/{GuidId}"

<h1>Counter</h1>

<p>Current count: @currentCount</p>


@if (GuidId != Guid.Empty)
{
    <p>Parameter GuidId: @GuidId</p>
}

<button class="btn btn-primary" onclick="@IncrementCount">Click me</button>

@functions {

    [Parameter]
    public Guid GuidId { get; set; }

    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}
